# 1
cdt1
mkdir initramfs
cd    initramfs

mkdir bin/ opt/
mkdir dev/ sys/ proc/ run/
mkdir mnt/

tar xf /mnt/mss/stuff/techy-bits/packaged-software/"${amachine}"-busybox-1.35.0-initramfs.tar.zst
mv    ./busybox      bin/
cp -r /opt/cryptshit opt/

rm -rfv opt/cryptshit/lvm/cache

fdir="/mss/repo/pkg/recipes/initramfs/files"
cp "${fdir}"/init .

cdir="/mnt/mss/stuff/techy-bits/git/mss-ec/consolefonts"
cp "${cdir}"/ter-v18n.psf ./font.psf

sed -i init \
 -e "s/REPLACEDAT/`dn`/g"

chmod +x init

# 2
find . | cpio -o -H newc | zstd -19 > ../initramfs.zst
doas -s
mv ../initramfs.zst /boot
chown -Rh root:root /boot
lilo
