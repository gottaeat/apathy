# 1
penis="/mss/work/table/KEK"
export       CFLAGS="${CFLAGS}   -L${penis}/lib -fPIC"
export     CXXFLAGS="${CXXFLAGS} -L${penis}/lib -fPIC"
export LIBRARY_PATH="${LIBRARY_PATH}:${penis}/lib"

tar xf \
 /mnt/mss/stuff/techy-bits/packaged-software/pcre2-10.40-static.tar.zst

mkdir "${penis}"/
mv pcre2-static/ "${penis}"/lib

# 2
tar xf /mss/work/sauces/grep-3.10.tar.xz
cd     grep-3.10/

export LDFLAGS="${LDFLAGS} -static"

./configure \
 --build=$CBUILD           \
 --host=$CHOST             \
 --prefix=/usr             \
 --bindir=/bin             \
 --sysconfdir=/etc         \
 --mandir=/usr/share/man   \
 --infodir=/usr/share/info \
 --disable-nls

make

# 3
doas -s
make install

rm -rfv \
 /usr/share/info \
 /usr/share/man
