# 1
export   CFLAGS="${CFLAGS}   -fPIC"
export CXXFLAGS="${CXXFLAGS} -fPIC"

nobuild="blkdiscard
         blkzone
         blockdev
         chcpu
         choom
         col
         colcrt
         colrm
         ctrlaltdel
         dmesg
         fincore
         findfs
         findmnt
         flock
         fsfreeze
         getopt
         hexdump
         i386
         ipcmk
         isosize
         ldattach
         linux32
         linux64
         look
         lsipc
         lslocks
         lsns
         mkswap
         namei
         prlimit
         readprofile
         renice
         rev
         rtcwake
         setarch
         setsid
         sfdisk
         uname26
         uuidparse
         x86_64"

for i in $nobuild; do
 sed -i -e "s|build_${i}|no|g" configure
done

sed -i -e 's|\$no|no|g;s|noumn|yes|g' configure

./configure \
 --build="${CBUILD}"               \
