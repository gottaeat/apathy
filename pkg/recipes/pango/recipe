# 1
pdir="/mss/repo/pkg/recipes/pango/patches"
patch -p1 < "${pdir}"/0001-fix-pc.patch

sed -i "/subdir('tests')/d"    meson.build
sed -i "/subdir('examples')/d" meson.build

mkdir build
cd    build

# 2
meson setup \
 --buildtype=plain   \
 --prefix=/usr       \
 -Dgir=false         \
 -Denable_docs=false \
..
