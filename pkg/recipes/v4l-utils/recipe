# 1
penis="/mss/work/table/KEK"
export       CFLAGS="${CFLAGS}   -I${penis}/include -L${penis}/lib -D__off_t=off_t -fPIC"
export     CXXFLAGS="${CXXFLAGS} -I${penis}/include -L${penis}/lib -D__off_t=off_t -fPIC"
export      LDFLAGS="${LDFLAGS}  -largp"
export LIBRARY_PATH="${penis}/lib"

tar xf /mss/work/sauces/argp-standalone-1.3.tar.gz
cd     argp-standalone-1.3/

pdir="/mss/repo/pkg/recipes/v4l-utils/patches"
patch -p1 < "${pdir}"/0001-argp-standalone-throw-in-funcdef.patch
patch -p1 < "${pdir}"/0002-argp-standalone-gnu89-inline.patch

autoreconf -vfi

CFLAGS="${CFLAGS} -fPIC" \
./configure      \
 --build=$CBUILD \
 --host=$CHOST   \
 --prefix="${penis}"

make
mkdir -pv "${penis}"/{include,lib}
cp    -rf argp.h    "${penis}"/include
cp    -rf libargp.a "${penis}"/lib

cd ..
rm -rf argp-standalone-1.3/

# 2
tar xf /mss/work/sauces/v4l-utils-1.20.0.tar.bz2
cd     v4l-utils-1.20.0/

patch -p1 < "${pdir}"/0003-v4l-utils-getsubopt.patch
patch -p1 < "${pdir}"/0004-v4l-utils-types.patch

./configure \
 --build=$CBUILD                  \
 --host=$CHOST                    \
 --prefix=/usr                    \
 --sysconfdir=/etc                \
 --mandir=/usr/share/man          \
 --infodir=/usr/share/info        \
 --localstatedir=/var             \
\
 --disable-static                 \
 --disable-nls                    \
 --disable-libdvbv5               \
 --disable-v4l-utils              \
 --disable-v4l2-compliance-libv4l \
 --disable-v4l2-ctl-libv4l        \
 --disable-v4l2-ctl-stream-to     \
 --disable-qv4l2                  \
 --disable-qvidcap                \
 --disable-bpf                    \
 --without-libintl-prefix

make

# 3
doas -- make -j1 install
