# 1
export LDFLAGS="$(echo ${LDFLAGS} | sed 's/,-/ -Wl,-/g;s/-Wl -Wl,/-Wl,/g;')"

echo '#define SYS_VIMRC_FILE "/etc/vimrc"' >> src/feature.h

./configure \
 --build="${CBUILD}"               \
 --host="${CHOST}"                 \
 --prefix=/usr                     \
 --with-compiledby="retard"        \
 --with-tlib=ncursesw              \
 --with-features=huge              \
\
 --enable-cscope                   \
 --enable-multibyte                \
 --disable-acl                     \
 --disable-arabic                  \
 --disable-canberra                \
 --disable-darwin                  \
 --disable-desktop-database-update \
 --disable-farsi                   \
 --disable-gpm                     \
 --disable-gtktest                 \
 --disable-gui                     \
 --disable-icon-cache-update       \
 --disable-luainterp               \
 --disable-mzschemeinterp          \
 --disable-netbeans                \
 --disable-nls                     \
 --disable-perlinterp              \
 --disable-python3interp           \
 --disable-pythoninterp            \
 --disable-rubyinterp              \
 --disable-selinux                 \
 --disable-smack                   \
 --disable-sysmouse                \
 --disable-tclinterp               \
 --disable-xim                     \
 --without-gnome                   \
 --without-x

make

# 2
doas -s
make install

ln -sfv /usr/bin/vim /usr/bin/vi

rm -rfv \
 /usr/bin/vimtutor                      \
 /usr/share/applications                \
 /usr/share/icons/hicolor               \
 /usr/share/icons/locolor               \
 /usr/share/man                         \
 /usr/share/vim/vim90/defaults.vim      \
 /usr/share/vim/vim90/doc               \
 /usr/share/vim/vim90/tutor             \
 /usr/share/vim/vim90/vimrc_example.vim \
 /usr/share/vim/vim90/gvimrc_example.vim

> /usr/share/vim/vim90/defaults.vim
