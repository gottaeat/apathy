#!/bin/sh
# mpd init script for sysvinit + start-stop-daemon
# mssLinux 1.2 - mssx86 (mssftw@protonmail.com)

set -e
. /lib/lsb/init-functions

NAME=mpd
PIDFILE=/run/$NAME.pid
DAEMON=/usr/bin/mpd
DAEMON_OPTS="-p $PIDFILE /etc/mpd.conf"
USER=mpd

export PATH="${PATH:+$PATH:}/usr/sbin:/sbin"

case "$1" in
 start)
  log_info_msg "mssLinux - starting $NAME."
  start-stop-daemon --start --quiet -b --chuid $USER --exec $DAEMON $DAEMON_OPTS
  evaluate_retval
  ;;
 stop)
  log_info_msg "mssLinux - stopping $NAME."
  start-stop-daemon --stop --quiet --oknodo --pidfile "$PIDFILE" 
  evaluate_retval
  ;;
 restart)
  ${0} stop
  sleep 1
  ${0} start
  ;;
 status)
  statusproc $DAEMON
  ;;
 *)
  echo "Usage: "$1" {start|stop|restart}"
  exit 1
esac
