#!/mss/bin/sh
. /mss/init/bin/funcs

case "$1" in
 start)
  ainitmes "${c_lcyan}(ssh)${c_reset}: starting."
   /usr/bin/sshd >/dev/null 2>&1
  evalret
 ;;
 stop)
  ainitmes "${c_lcyan}(ssh)${c_reset}: stopping."
   read sshdpgid < /run/sshd.pid
   kill -TERM ${sshdpgid}
  evalret

  ainitmes "${c_lcyan}(ssh)${c_reset}: terminating existing sessions."
   for pid in $(pgrep sshd); do kill -TERM "$pid"; done
  evalret
 ;;
 *)
  ainitusage "{start|stop|restart}"
  exit 1
 ;;
esac
