# 1 > alsa-libs
tar xfp /mss/work/sauces/alsa-lib-1.2.3.1.tar.bz2
cd alsa-lib-1.2.3.1

./configure \
 --build=$CBUILD  \
 --host=$CHOST    \
 --prefix=/usr    \
\
 --enable-rawmidi \
 --enable-seq     \
\
 --without-debug  \
 --disable-aload  \
 --disable-python \
 --disable-static \
 --disable-resmgr

make V=0
make DESTDIR=/mss/work/FUCK install
doas -- make install
cd ..

# 2 > alsa-plugins
tar xfp /mss/work/sauces/alsa-plugins-1.2.2.tar.bz2
cd alsa-plugins-1.2.2

./configure \
 --build=$CBUILD         \
 --host=$CHOST           \
 --prefix=/usr           \
 --sysconfdir=/etc       \
 --localstatedir=/var    \
 --mandir=/usr/share/man \
\
 --disable-oss           \
 --disable-usbstream     \
 --disable-arcamav       \
 --disable-jack          \
 --disable-pulseaudio    \
 --disable-samplerate    \
 --disable-speexdsp      \
 --disable-aaf

make V=0
make DESTDIR=/mss/work/FUCK install
doas -- make install
cd ..

# 3 > alsa-utils
tar xfp /mss/work/sauces/alsa-utils-1.2.3.tar.bz2
cd alsa-utils-1.2.3

./configure \
 --build=$CBUILD    \
 --host=$CHOST      \
 --prefix=/usr      \
\
 --disable-alsaconf \
 --disable-bat      \
 --disable-xmlto    \
 --disable-rst2man  \
 --disable-nls

make V=0
make DESTDIR=/mss/work/FUCK install
doas -- make install
cd ..
