# > 1
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/firefox-build-dir
mk_add_options MOZ_MAKE_FLAGS="-j5"

# > 2
ac_add_options --host="x86_64-apathy-linux-musl"
ac_add_options --target="x86_64-apathy-linux-musl"
ac_add_options --prefix=/usr
ac_add_options --libdir=/usr/lib
ac_add_options --with-libclang-path="/opt/llvm-11.0.1/lib"
ac_add_options --with-clang-path="/opt/llvm-11.0.1/bin/clang"

# > 3
ac_add_options --enable-hardening
ac_add_options --enable-install-strip
ac_add_options --enable-release
ac_add_options --enable-rust-simd
ac_add_options --enable-strip
ac_add_options --disable-debug-symbols
ac_add_options --disable-elf-hack
ac_add_options --disable-gold
ac_add_options --disable-jemalloc
ac_add_options --disable-profiling
ac_add_options --disable-tests

# > 4
ac_add_options --enable-optimize="-w -pipe -O2 -mtune=native -march=native -fcommon -flto=thin -flto-jobs=5 -fuse-ld=lld -stdlib=libc++ -rtlib=compiler-rt -unwindlib=libunwind"
ac_add_options --enable-linker="lld"
ac_add_options --enable-lto="cross"

# > 5
ac_add_options --disable-official-branding
ac_add_options --enable-application=browser
ac_add_options --with-branding=browser/branding/unofficial
ac_add_options --with-distribution-id=io.github.mssx86

# > 6
ac_add_options --enable-alsa
