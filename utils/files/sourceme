# 2 > functions
cdo()  { cd - >/dev/null 2>&1;}
tarup(){ tar cfp "${1}".tar "${1}";}
ytmusic(){
 yt-dlp \
  -o "${PWD}/%(playlist_title)s/%(playlist_index)s %(title)s.%(ext)s" \
  -f bestaudio                                                        \
 ${@}
}
mimup(){ export LD_PRELOAD="/opt/mimalloc-2.0.2/lib/libmimalloc.so";}
